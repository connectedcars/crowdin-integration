{
  "compilerOptions": {
    "target": "es2019",
    "lib": [
      "es2019",      
    ],
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "moduleResolution": "node",
    "allowJs": false,
    "module": "CommonJS",
    "declaration": true,
    "sourceMap": true,
    "outDir": "build/dist",
    "rootDir": "./",
    "incremental": true
  },
  "include": ["bin"],
  "exclude": [
    "node_modules",
    "build",
    "coverage"
  ]
}